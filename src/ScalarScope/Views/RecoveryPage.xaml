<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScalarScope.Views.RecoveryPage"
             Title="Session Recovery"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1a1a2e}">

    <Grid Padding="40" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="16">
            <Label Text="Recovered from Unexpected Stop"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                   HorizontalOptions="Center" />

            <Label Text="ScalarScope encountered an issue during your last session. Don't worry â€” your work is safe."
                   FontSize="16"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   MaximumWidthRequest="500" />
        </VerticalStackLayout>

        <!-- Content -->
        <Frame Grid.Row="1"
               BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#16213e}"
               BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#2a2a4e}"
               CornerRadius="12"
               Padding="24"
               Margin="0,24"
               MaximumWidthRequest="600"
               HorizontalOptions="Center"
               VerticalOptions="Center">

            <VerticalStackLayout Spacing="20">

                <!-- Last Session Info -->
                <Label Text="Last Session"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />

                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="8">
                    <Label Grid.Row="0" Grid.Column="0" Text="File:" TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                    <Label Grid.Row="0" Grid.Column="1" x:Name="LastFileLabel" TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Page:" TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                    <Label Grid.Row="1" Grid.Column="1" x:Name="LastPageLabel" TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />

                    <Label Grid.Row="2" Grid.Column="0" Text="Time:" TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" />
                    <Label Grid.Row="2" Grid.Column="1" x:Name="LastTimeLabel" TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                </Grid>

                <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#EEEEEE, Dark=#2a2a4e}" />

                <!-- What Happened -->
                <Label Text="What Happened"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />

                <Label x:Name="CrashInfoLabel"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                       FontSize="14" />

                <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#EEEEEE, Dark=#2a2a4e}" />

                <!-- Options -->
                <Label Text="What would you like to do?"
                       FontSize="16"
                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />

            </VerticalStackLayout>
        </Frame>

        <!-- Actions -->
        <HorizontalStackLayout Grid.Row="2" Spacing="16" HorizontalOptions="Center">

            <Button Text="Resume Last Session"
                    Clicked="OnResumeClicked"
                    BackgroundColor="#4ecdc4"
                    TextColor="White"
                    FontAttributes="Bold"
                    Padding="24,12"
                    CornerRadius="8" />

            <Button Text="Start Fresh"
                    Clicked="OnStartFreshClicked"
                    BackgroundColor="{AppThemeBinding Light=#DDDDDD, Dark=#2a2a4e}"
                    TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                    Padding="24,12"
                    CornerRadius="8" />

            <Button Text="Create Support Bundle"
                    Clicked="OnSupportBundleClicked"
                    BackgroundColor="{AppThemeBinding Light=#EEEEEE, Dark=#1a1a2e}"
                    TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                    Padding="24,12"
                    CornerRadius="8" />

        </HorizontalStackLayout>

    </Grid>
</ContentPage>
